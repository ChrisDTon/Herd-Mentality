// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  idUser Int     @id @default(autoincrement())
  score  Int     @default(0)
  name   String?
  Round  Round[]
}

model Prompt {
  idPromt Int     @id @default(autoincrement())
  text    String? @unique
}

model Round {
  idRound  Int     @id @default(autoincrement())
  point    Boolean @default(false)
  bsheep   Boolean @default(false)
  player   User    @relation(fields: [playerId], references: [idUser])
  playerId Int
}
